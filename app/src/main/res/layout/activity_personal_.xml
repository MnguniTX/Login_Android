<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:width="200dp"
            android:height="50dp"
            android:text="Welcome To Thabo App"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/sear"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="214dp"
            android:onClick="btnSea"
            android:text="Search" />

        <TextView
            android:id="@+id/pers"
            android:layout_width="280dp"
            android:layout_height="153dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="" />

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="147dp"
            android:ems="10"
            android:hint="Search by E-mail"
            android:inputType="textPersonName"
            android:text=""
            android:visibility="invisible" />

        <TextView
            android:id="@+id/results"
            android:layout_width="267dp"
            android:layout_height="109dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="21dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="" />

        <Button
            android:id="@+id/okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/results"
            android:layout_alignRight="@+id/results"
            android:layout_alignTop="@+id/enter_email"
            android:onClick="ok"
            android:visibility="invisible"
            android:text="PROCEED" />

        <Button
            android:id="@+id/out"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/results"
            android:onClick="out"
            android:text="Log out" />

        <Button
            android:id="@+id/goo"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="88dp"
            android:onClick="google"
            android:text="Visit Google" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>