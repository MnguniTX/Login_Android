<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reset_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <TextView
            android:id="@+id/textView4"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="Find Your Password" />

        <EditText
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:ems="10"
            android:hint="Find By E-Mail"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/newPas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint=""
            android:visibility="invisible"
            android:inputType="" />

        <Button
            android:id="@+id/resBut"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:onClick="newp"
            android:text="FIND PASSWORD" />

        <Button
            android:id="@+id/button3"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resBut"
            android:layout_centerHorizontal="true"
            android:onClick="back"
            android:text="BACK" />

        <TextView
            android:id="@+id/y"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:layout_alignTop="@+id/newPas"
            android:layout_marginTop="6dp"
            android:text="Your Password is :"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>